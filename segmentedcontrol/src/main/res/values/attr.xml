        <attr name="segmentBackground" format="reference"/>
        <attr name="segmentTextColor" format="color|reference"/>
        <attr name="segmentCloseIcon" format="reference"/>
        <attr name="segmentMarginTop" format="dimension"/>
        <attr name="segmentMarginBottom" format="dimension"/>
        <attr name="segmentMarginLeft" format="dimension"/>
        <attr name="segmentMarginRight" format="dimension"/>
        <attr name="segmentPaddingTop" format="dimension"/>
        <attr name="segmentPaddingBottom" format="dimension"/>
        <attr name="segmentPaddingLeft" format="dimension"/>
        <attr name="segmentPaddingRight" format="dimension"/>
        <attr name="segmentCloseIconMarginLeft" format="dimension"/>
